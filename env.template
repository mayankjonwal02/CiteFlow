# ===========================================
# CITEFLOW Environment Configuration
# ===========================================

# OpenAI API Key (Required)
OPENAI_API_KEY=sk-your-api-key-here

# Firecrawl Authentication (set to false for local dev)
USE_DB_AUTHENTICATION=false

# Service URLs (auto-configured in Docker)
QDRANT_URL=http://qdrant-digitrix:6333
SEARXNG_URL=http://searxng-digitrix:8080
FIRECRAWLER_URL=http://firecrawl-api-digitrix:3002

# PostgreSQL (for Firecrawl job queue)
POSTGRES_USER=firecrawl
POSTGRES_PASSWORD=firecrawl_secret
POSTGRES_DB=firecrawl
POSTGRES_HOST=postgres-digitrix
POSTGRES_PORT=5432

# Valkey/Redis (for SearXNG caching)
VALKEY_URL=redis://valkey-digitrix:6379
